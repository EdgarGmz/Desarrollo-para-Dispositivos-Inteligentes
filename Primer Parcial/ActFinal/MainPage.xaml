<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ActFinal"
             xmlns:components="clr-namespace:ActFinal.Components"
             x:Class="ActFinal.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label 
                Text="App Convertidor de Monedas"
                FontSize="24"
                HorizontalOptions="Center"
                TextColor="Blue"/>
            
            <!--Entrada de Datos-->
            <Entry
                x:Name="txtMonto"
                Placeholder="Ingrese el Monto"
                Keyboard="Numeric"
                FontSize="18"/>
            
            <!--Opciones de Conversion-->
            <Picker
                x:Name="ListaConversion"
                Title="Seleccione Conversion"
                FontSize="18">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Pesos a Dolares</x:String>
                        <x:String>Dolares a Pesos</x:String>
                    </x:Array>
                </Picker.ItemsSource>                
            </Picker>
            
            <!--Boton para Convertir-->
            <Button
                Text="Convertir"
                FontSize="18"
                BackgroundColor="LightBlue"
                TextColor="White"
                x:Name="btnConvertir"
                Clicked="BtnConvertir_Clicked"/>
            
            <!--Resultado-->
            <Label 
                x:Name="lblResultado"
                FontSize="20"
                TextColor="Green"
                HorizontalOptions="Center"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
