<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppFirma"
             xmlns:components="clr-namespace:AppFirma.Components"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AppFirma.MainPage">

   <Grid
       ColumnDefinitions="*,*"
       ColumnSpacing="10"
       RowDefinitions="*,Auto,200"
       RowSpacing="10"
       Padding="10">
       
       <toolkit:DrawingView
           Grid.ColumnSpan="2"
           ShouldClearOnFinish="False"
           LineColor="Red"
           LineWidth="5"
           Lines="{Binding Lines}"
           DrawingLineCompleted="btnDrawingView_DrawingLineCompleted"
           />
       
       <Button
           Grid.Row="1"
           Text="Clear"
           x:Name="btnClear"
           Clicked="btnClear_Clicked"/>
       
       <Button
           Grid.Row="1"
           Grid.Column="1"
           x:Name="btnSave"
           Text="Save"
           Clicked="btnSave_Clicked"/>
           
        <Image
            x:Name="drawingImage"
            HorizontalOptions="Center"
            WidthRequest="400"
            HeightRequest="200"
            Grid.Row="2"
            Grid.ColumnSpan="2"/>          
          
    </Grid>

</ContentPage>
