<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Act1_P2.MainPage"
             BackgroundColor="#121212">
    <VerticalStackLayout Spacing="25" 
                         VerticalOptions="Center" 
                         HorizontalOptions="Center"
                         Padding="30">

        <Label x:Name="TimeLabel"
               FontSize="64"
               FontAttributes="Bold"
               TextColor="Cyan"
               HorizontalOptions="Center" />

        <BoxView HeightRequest="1" 
                 Color="Gray" 
                 HorizontalOptions="Fill" />

        <VerticalStackLayout Spacing="10">
            <Label Text="Configurar Alarma:" 
                   TextColor="Silver" 
                   HorizontalOptions="Center"/>

            <TimePicker x:Name="AlarmTimePicker"
                        Format="HH:mm"
                        TextColor="White"
                        FontSize="20"
                        HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <Button Text="Establecer Alarma"
                x:Name="SetAlarma"
                Clicked="SetAlarma_Clicked"             
                BackgroundColor="#E63946"
                CornerRadius="10"
                TextColor="White"
                HeightRequest="50"
                WidthRequest="200" />

        <Label x:Name="AlarmaStatusLabel"
               FontSize="18"
               TextColor="#FFD166"
               HorizontalOptions="Center"
               FontAttributes="Italic" />

    </VerticalStackLayout>
</ContentPage>